#include <stdio.h>
#include <stdlib.h>
#include <math.h>
 
int main(int argc,char **argv)
{
 
 
   double a,b,c,p,s1,s2;
 
   system("color a");
 
 
   printf("enter A ( hauteur ) : ");
   scanf("%lf",&a);
   printf("enter B ( base ) :");
   scanf("%lf",&b);
   printf("enter c :");
   scanf("%lf",&c);
 
    p = (a+b+c)/2;
 
   s1 = p*(p-a)*(p-b)*(p-c);;
   s2 = ( b*a)/2;
 
    printf("S² = %lf", s1);
 
 
    printf(" S = %lf", s2);
 
 
 
    printf("différence = %lf,", pow(s2,2)-s1);
 
 
    return 0;
}
